{
  "name": "hotrod-db",
  "description": "hotrod with forked customer DB",
  "cluster": "signadot-staging",
  "resources": [
    {
      "name": "testdb",
      "plugin": "sd-mysql8-plugin",
      "params": {
        "dbname": "customer"
      }
    }
  ],
  "forks": [
    {
      "forkOf": {
        "kind": "Deployment",
        "name": "customer",
        "namespace": "hotrod"
      },
      "customizations": {
        "env": [
          {
            "name": "MYSQL_ROOT_PASSWORD",
            "valueFrom": {
              "resource": {
                "name": "testdb",
                "outputKey": "root_password"
              }
            }
          },
          {
            "name": "MYSQL_HOST",
            "valueFrom": {
              "resource": {
                "name": "testdb",
                "outputKey": "host"
              }
            }
          },
          {
            "name": "MYSQL_PORT",
            "valueFrom": {
              "resource": {
                "name": "testdb",
                "outputKey": "port"
              }
            }
          }
        ]
      },
      "endpoints": [
        {
          "name": "customer",
          "port": 8081,
          "protocol": "http"
        }
      ]
    },
    {
      "forkOf": {
        "kind": "Deployment",
        "name": "frontend",
        "namespace": "hotrod"
      },
      "endpoints": [
        {
          "name": "frontend",
          "port": 8080,
          "protocol": "http"
        }
      ]
    }
  ]
}
